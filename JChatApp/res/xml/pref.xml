    <PreferenceCategory
        android:summary="Jchtapp"
        android:title="vibration" >

        <CheckBoxPreference
            android:key="checkBox"
            android:summary="Also vibration when notification are received"
            android:title="" />
    </PreferenceCategory>

</PreferenceScreen>